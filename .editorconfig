root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.php]
ij_php_line_comment_at_first_column = false
ij_php_line_comment_add_space = true

[docker-compose.yml]
indent_size = 4
